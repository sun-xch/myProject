<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.business.sys.dao.SysUserDao">

    <select id="selectUser" resultType="com.example.config.security.MyUserDetails" parameterType="com.example.business.sys.entity.SysUser">
        SELECT
            user_name as username,
            password as password
        FROM
            sys_user
        WHERE
            user_name = #{userName}
    </select>

    <select id="selectAllUser" resultType="com.example.business.sys.entity.SysUser" parameterType="com.example.business.sys.entity.SysUser">
        SELECT * FROM sys_user
    </select>

</mapper>