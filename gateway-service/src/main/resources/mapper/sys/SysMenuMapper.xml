<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.business.sys.dao.SysMenuDao">

    <select id="getAuthMenu" resultType="com.business.sys.entity.SysMenu" parameterType="java.util.List">
        SELECT
			*
		FROM
			sys_menu
		WHERE
			uuid IN (
			SELECT DISTINCT
				menu_id
			FROM
				sys_role_menu
		WHERE
			role_id IN
			<foreach collection="roleIds" item="roleId" index="index" open="(" close=")" separator=",">
				#{roleId}
			</foreach>
			)
    </select>

</mapper>
